<Window x:Class="Vtitbid.Education.ISP19K.Wpf.Training.Views.AddPersonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vtitbid.Education.ISP19K.Wpf.Training.Views"
        mc:Ignorable="d"
        Title="Добавление пользователя" 
        Height="auto" 
        Width="400">
    <StackPanel
        Orientation="Vertical"
        Margin="0,8,0,8">

        <TextBlock
            Text="Имя"
            Margin="8,0,8,0"/>

        <TextBox
            Margin="8,0,8,0"
            Background="AliceBlue"/>

        <TextBlock
            Text="Фамилия"
            Margin="8,0,8,0"/>

        <TextBox
            Margin="8,0,8,0"
            Background="AliceBlue"/>

        <TextBlock
            Text="Отчество"
            Margin="8,0,8,0"/>

        <TextBox
            Margin="8,0,8,0"
            Background="AliceBlue"/>

        <TextBlock
            Text="Возраст"
            Margin="8,0,8,0"/>

        <TextBox
            Margin="8,0,8,0"
            Background="AliceBlue"/>

        <Button
            Margin="8,8,8,0"
            Content="Добавить пользователя"
            Background="DarkBlue"
            Foreground="White"/>

    </StackPanel>
</Window>
