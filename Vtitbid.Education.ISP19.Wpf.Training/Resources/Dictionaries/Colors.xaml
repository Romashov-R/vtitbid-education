<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="ColorPrimary">#3772FF</SolidColorBrush>
    <SolidColorBrush x:Key="ColorPrimaryDark">#0048CB</SolidColorBrush>
    <SolidColorBrush x:Key="ColorPrimaryLight">#7CA0FF</SolidColorBrush>
    <SolidColorBrush x:Key="ColorGrayLight">#F9F9F9</SolidColorBrush>
    
    <!-- Background colors -->
    <SolidColorBrush x:Key="ColorBackgroundPrimary" Color="#131725"/>
    <SolidColorBrush x:Key="ColorBackgroundSecond" Color="#1D2335"/>

    <!-- Text colors -->
    <SolidColorBrush x:Key="ColorTextPrimary" Color="#FFF"/>
    <SolidColorBrush x:Key="ColorTextSecond" Color="#B0B7C3"/>
    <SolidColorBrush x:Key="ColorTextThird" Color="#8A94A6"/>
    <SolidColorBrush x:Key="ColorTextFourth" Color="#4B5D78"/>

    <!-- Icon colors -->
    <SolidColorBrush x:Key="ColorIconPrimary" Color="#8A94A6"/>
    <SolidColorBrush x:Key="ColorIconSecond" Color="#B0B7C3"/>
    

</ResourceDictionary>